---
import { Image, Picture } from "astro:assets";
import heroImage from "../assets/hero-screenshot.png";
import Link from "@components/ui/link.astro";
import Container from "@components/container.astro";
import './src/styles/custom.css';
---

<div class="overflow-x-clip">
  <Container>
    <main class="grid lg:grid-cols-5 place-items-center relative">
      <div
        class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-indigo-200 right-0 top-0">
      </div>
      <div
        class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-purple-200 right-56 top-10">
      </div>

      <div class="max-w-sm md:max-w-max lg:col-span-2">
        <h1
          class="text-3xl lg:text-4xl xl:text-6xl font-bold lg:tracking-tight xl:tracking-tighter [text-wrap:balance] text-center lg:text-start">
          Speak Smarter, Engage Deeper
        </h1>
        <p
          class="text-lg mt-4 max-w-lg text-slate-600 [text-wrap:balance] text-center lg:text-start">
          Unleash the power of AI-driven conversations that feel human. Build personalized, seamless voice interactions with our advanced conversational AI platform
        </p>
        <div
          class="mt-6 flex flex-col sm:flex-row sm:justify-center lg:justify-start gap-3">
          <Link
            href="https://web3templates.com/templates/astroship-pro-astro-saas-website-template"
            target="_blank"
            class="flex gap-1 items-center justify-center"
            rel="noopener">
            Get started
          </Link>
          <Link
            size="lg"
            style="outline"
            rel="noopener"
            href="https://github.com/surjithctly/astroship"
            class="flex gap-1 items-center justify-center"
            target="_blank">
            Book Demo
          </Link>
        </div>
        <div>
          <ul class="list_intro">
            <li>
              <svg width="25" height="25" viewBox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M8.61914 11.7921C10.7091 13.1131 12.2691 15.4731 12.2691 15.4731H12.2991C12.2991 15.4731 15.6191 9.60509 21.7791 5.99609" stroke="#4F46E5" stroke-width="1.5" stroke-linecap="square"/>
                <path d="M16.8577 4.68016C15.4397 3.79616 13.7637 3.28516 11.9688 3.28516C6.85875 3.28516 2.71875 7.42616 2.71875 12.5342C2.71875 17.6432 6.85875 21.7842 11.9688 21.7842C17.0788 21.7842 21.2188 17.6432 21.2188 12.5342C21.2188 10.6612 20.6628 8.91716 19.7048 7.46116" stroke="#4F46E5" stroke-width="1.5" stroke-linecap="square"/>
                </svg>
              No credit card required
            </li>
            <li>
              <svg width="25" height="25" viewBox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M8.61914 11.7921C10.7091 13.1131 12.2691 15.4731 12.2691 15.4731H12.2991C12.2991 15.4731 15.6191 9.60509 21.7791 5.99609" stroke="#4F46E5" stroke-width="1.5" stroke-linecap="square"/>
                <path d="M16.8577 4.68016C15.4397 3.79616 13.7637 3.28516 11.9688 3.28516C6.85875 3.28516 2.71875 7.42616 2.71875 12.5342C2.71875 17.6432 6.85875 21.7842 11.9688 21.7842C17.0788 21.7842 21.2188 17.6432 21.2188 12.5342C21.2188 10.6612 20.6628 8.91716 19.7048 7.46116" stroke="#4F46E5" stroke-width="1.5" stroke-linecap="square"/>
                </svg>
                14-day free trial
            </li>
            <li>
              <svg width="25" height="25" viewBox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M8.61914 11.7921C10.7091 13.1131 12.2691 15.4731 12.2691 15.4731H12.2991C12.2991 15.4731 15.6191 9.60509 21.7791 5.99609" stroke="#4F46E5" stroke-width="1.5" stroke-linecap="square"/>
                <path d="M16.8577 4.68016C15.4397 3.79616 13.7637 3.28516 11.9688 3.28516C6.85875 3.28516 2.71875 7.42616 2.71875 12.5342C2.71875 17.6432 6.85875 21.7842 11.9688 21.7842C17.0788 21.7842 21.2188 17.6432 21.2188 12.5342C21.2188 10.6612 20.6628 8.91716 19.7048 7.46116" stroke="#4F46E5" stroke-width="1.5" stroke-linecap="square"/>
                </svg>
                
              Cancel anytime
            </li>
          </ul>
        </div>
      </div>
      <div class="py-3 lg:col-span-3 lg:-mr-44">
        <Picture
          src={heroImage}
          alt="Astronaut in the air"
          formats={["avif", "webp"]}
          sizes="(max-width: 1024px) 100vw, 50vw"
          widths={[240, 540, 720, heroImage.width]}
          loading="eager"
          fetchpriority="high"
        />
      </div>
      <div>
      </div>
    </main>
  </Container>
</div>

<style>
  .list_intro {
    display: flex;
    gap: 8px;
    align-items:center;
    flex-wrap: wrap;
    margin-top: 24px;
    font-size:14px;
    font-weight:500;
    opacity: 80%;
}
.list_intro li {  
     display: flex;
     gap: 4px;
     align-items: flex-end;
    height: fit-content;
    padding-top: 10px;
    color: #4F46E5;
  }

</style>